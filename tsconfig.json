{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./public/dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jquery",
      "materialize-css"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./resources/angular/",
    "paths": {
      "@ngx-materialize": [ "app/modules/ngx-materialize/index" ],
      "@ngx-materialize/*": [ "app/modules/ngx-materialize/*" ]
    }
  }
}
