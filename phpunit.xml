        </testsuite>
        <testsuite name="ParametersModule">
            <directory suffix="Test.php">./app/Modules/Parameters/Tests</directory>
        </testsuite>
        <!-- generated modules test suits here -->
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="false">
            <directory suffix=".php">./app</directory>
            <exclude>
                <directory>./app/Console</directory>
                <directory>./app/Domains</directory>
                <directory>./app/Exceptions</directory>
                <directory>./app/Foundation</directory>
                <directory>./app/Mail</directory>
                <directory>./app/Notifications</directory>
                <directory>./app/Renova</directory>
                <directory>./app/Modules/Administration/Routes</directory>
