        </testsuite>
        <testsuite name="InvoicingModule">
            <directory suffix="Test.php">./app/Modules/Invoicing/Tests</directory>
        </testsuite>
        <testsuite name="InvoicingModule">
            <directory suffix="Test.php">./app/Modules/Invoicing/Tests</directory>
        </testsuite>
        <testsuite name="ReportsModule">
            <directory suffix="Test.php">./app/Modules/Reports/Tests</directory>
        </testsuite>
        <testsuite name="LibraryModule">
            <directory suffix="Test.php">./app/Modules/Library/Tests</directory>
        </testsuite>
        <testsuite name="LibraryModule">
            <directory suffix="Test.php">./app/Modules/Library/Tests</directory>
